<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.jainisam.techno.jainisam.Punchang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <com.jainisam.techno.jainisam.MyTextView
        android:id="@+id/tv_today_date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#40cccccc"
        android:textSize="17sp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"/>


    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:mcv_showOtherDates="defaults"
        app:mcv_selectionColor="@color/colorPrimaryDark"
        app:mcv_arrowColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        />



            <LinearLayout
                android:orientation="vertical"
                android:paddingLeft="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendarView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">


                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <View
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="#388E3C"
                        android:layout_below="@+id/calendarView"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <com.jainisam.techno.jainisam.MyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paakhi(Both)"
                        android:textSize="15sp"
                        android:paddingLeft="5dp"
                        android:textStyle="bold"
                        android:layout_gravity="left"
                        android:gravity="left"/>
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#FFEBAB"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paryushan/\nAayumbil odi"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="left"
                            android:gravity="left"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#FFA000"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aatham(Both)"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#5D4037"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pacham(Both)"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#C2185B"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bij  (Both)"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Today"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="1dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="#C2185B"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bij  (Both)"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1.1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <View
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:background="@color/colorPrimaryDark"
                            android:layout_below="@+id/calendarView"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />

                        <com.jainisam.techno.jainisam.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Today"
                            android:textSize="15sp"
                            android:paddingLeft="5dp"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:gravity="center"/>
                    </LinearLayout>




                </LinearLayout>













            </LinearLayout>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/menu_tithi"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        fab:menu_labels_ellipsize="end"
        fab:menu_labels_singleLine="true"
        fab:menu_backgroundColor="#ccffffff"
        fab:menu_colorNormal="@color/colorhighlight"
        fab:menu_fab_label="">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_paakhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/uncheceked"
            fab:fab_size="mini"
            fab:fab_colorNormal="#388E3C"
            fab:fab_label="Set Paakhi Reminder" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_Aatham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/uncheceked"
            fab:fab_size="mini"
            fab:fab_colorNormal="#FFA000"
            fab:fab_label="Set Aatham Reminder"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_pacham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/uncheceked"
            fab:fab_size="mini"
            fab:fab_colorNormal="#5D4037"
            fab:fab_label="Set Pacham Reminder" />


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab_bij"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/uncheceked"
            fab:fab_size="mini"
            fab:fab_colorNormal="#C2185B"
            fab:fab_label="Set Bij Reminder" />




    </com.github.clans.fab.FloatingActionMenu>



        </RelativeLayout>
    </LinearLayout>
</ScrollView>