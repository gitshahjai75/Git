<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ffffff"
    tools:context="com.jainisam.techno.jainisam.Donateus">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jainisam.techno.jainisam.MyTextView
                android:id="@+id/tv_chovihar_sub"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Why you Donate me?"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="19dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="#cccccc"/>


            <com.jainisam.techno.jainisam.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Dear member,\nI have just started this for our whole jain community where all the information can be found.So for this we have planed so many features for this app which are still pending to develop \nSo for that development i am as a Freelancer can't afford costs for servers and hiring persons for other features of Live.\nDonor List also will publish if some good amount will be Given.\nThank You."
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="15dp"
                android:padding="10dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.jainisam.techno.jainisam.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" Bank Details "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="#cccccc"/>

            <com.jainisam.techno.jainisam.MyTextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="\nA/c Holder Name : Jay Sureshbhai Shah\n\nA/c Number : 20102847215\n\n   IFSC Code :  SBIN0060317"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"
                android:layout_below="@+id/textView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="#cccccc"/>



            <com.jainisam.techno.jainisam.MyTextView
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Thank You in Advance\n* if you donated kindly share transection details with us so we can manage. "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="13dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


</ScrollView>
