<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ffffff"
    tools:context="com.jainisam.techno.jainisam.Donateus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="3dp"
            card_view:contentPadding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.jainisam.techno.jainisam.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text=" About Me. "
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/textView"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_margin="2dp"
                    android:background="#cccccc"/>

                <com.jainisam.techno.jainisam.MyTextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text=" Hello,\nI am Jay Shah Freelancer or Entrepreneur of Technocrats Appware,Surat.\nBy Profession I am B.E in Information &amp; Technology From G.T.U.\nI Love to Develop Mobile apps which is very user friendly and For every one ,that can be useful to them by daily needs.\nit should be their Business need, Educational need or Basic Daily needs.\nFurther Details are bellow."
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:layout_below="@+id/textView"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="3dp"
            card_view:contentPadding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.jainisam.techno.jainisam.MyTextView
                    android:id="@+id/tv_call_mobile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:drawableLeft="@android:drawable/ic_menu_call"
                    android:text="  +91-9033228796"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/textView"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="3dp"
            card_view:contentPadding="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <com.jainisam.techno.jainisam.MyTextView
                    android:id="@+id/tv_email_contactus"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:drawableLeft="@android:drawable/ic_menu_edit"
                    android:text="  shah.jai75@gmail.com"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:textSize="15dp"
                    android:textColor="#000000"
                    android:layout_below="@+id/textView"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>