<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    
    android:background="@drawable/whitebtn"
    android:padding="5dp"
    >  

     <TextView 
         android:text="Sorry! Your call was disconnetcted due to technical difficulties! Your credit will not deducted for this Video call." 
         android:id="@+id/error_desc"
       android:paddingLeft="5dp"
       android:paddingRight="5dp"
         android:layout_marginTop="10dp"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content" 
    	
    	 android:textColor="#000000"
    	 android:textSize="19sp"
    	 android:gravity="left"
         />
      <TextView 
        
         android:id="@+id/link1"
         android:textSize="19sp" 
           android:paddingLeft="5dp"
       android:paddingRight="5dp"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content" 
         android:textColor="#000000"
           android:gravity="left"
    	 
    	 
         />
       <TextView 
        
         android:id="@+id/link2"
         android:paddingLeft="5dp"
       android:paddingRight="5dp"
       android:paddingBottom="15dp"
         android:layout_width="wrap_content" 
         android:layout_height="wrap_content" 
    	
    	 android:textColor="#000000"
    	 android:textSize="19sp"
    	  android:gravity="left"
         />

      
     
     
      <Button android:id="@+id/Home" 
         android:layout_height="match_parent" 
       android:text="Home"  
       android:focusable="false"
         android:textColor="#00bfff"
         android:textSize="21sp" 
         android:background="@drawable/skywhitebtn"
         android:layout_width="fill_parent"
		 android:layout_weight="0.50"
		 android:padding="8dp"
		 android:layout_marginLeft="3dp"
		 android:layout_marginRight="3dp"
		 
/>

    
</LinearLayout>