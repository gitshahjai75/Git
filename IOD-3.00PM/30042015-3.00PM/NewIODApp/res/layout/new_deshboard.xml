<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1" >
        
         
          <RelativeLayout
           
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25" 
            android:background="@color/main_background"
            >
            
              <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1" 
        android:padding="10dp"
        >
        
                  <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.60" 
            android:background="@color/main_background"
            
            
            >
            
            
              <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/User_image"
        android:layout_width="100dp"
                android:layout_height="100dp"
      android:background="@drawable/whitebtn"
       android:padding="2dp"
       android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        
        android:contentDescription="@null"
        />
        
                      </RelativeLayout>
                      
                  <RelativeLayout
            
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.40" 
            android:background="@color/main_background"
            >
                       
                       <TextView
                android:id="@+id/User_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
               android:layout_toLeftOf="@+id/EditProfileImg_Btn"
                 android:layout_alignParentBottom="true"
                
                android:maxLines="2"
                android:text="Pinal Kumar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" 
                android:textSize="19dp"
                android:paddingRight="10dp"
                android:textAlignment="textEnd"
                />
                       
                       
                      <ImageButton
                android:id="@+id/EditProfileImg_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
               
                android:background="#00B8FC"
                android:src="@drawable/editprof" />
        
                      </RelativeLayout>
                  
        
                  </LinearLayout>
            
              
            
              </RelativeLayout>
              
          
           <RelativeLayout
            android:id="@+id/rl_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.75" 
            android:background="#423e3e"
            >
            
               
                <ScrollView 
            android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    android:fillViewport="true" 
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                android:paddingLeft="10dp"
                android:paddingRight="10dp"                
                android:paddingTop="20dp"
                android:weightSum="4"
                
                >
                      
                <LinearLayout
           
           	 android:id="@+id/Local_layout"
            android:layout_width="match_parent"
           android:layout_height="0dp"
          	android:orientation="horizontal"
            android:layout_marginTop="15dp"
             android:background="@drawable/whitebtn"
             android:layout_weight="0.80"
             android:padding="2dp"
             android:weightSum="1"
            
            
              
            
            >
                    
                     <RelativeLayout 
                          android:layout_height="match_parent"
                          android:layout_width="0dp"
                          android:layout_weight="0.50"
                          
                          
                          >
                          
                         <TextView
                android:id="@+id/Local_Credit_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:paddingLeft="10dp"
              android:textStyle="bold"
               
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="30dp" />
                         
                         <TextView
                             android:id="@+id/textView1"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:layout_toRightOf="@+id/Local_Credit_txt"
                             android:gravity="center"
                             android:maxLines="2"
                             android:padding="5dp"
                             android:text="LOCAL \nCREDIT"
                             android:textAppearance="?android:attr/textAppearanceMedium"
                             android:textColor="@color/white"
                             android:textSize="14dp"
                             android:textStyle="bold" />
                         
                  </RelativeLayout> 
                    
                      
                      
                      <RelativeLayout 
                          android:id="@+id/Local_doc_layout"
                          android:layout_height="match_parent"
                          android:layout_width="0dp"
                          android:layout_weight="0.50"
                          android:background="@color/green"
                          
                          >
                          
                           <ImageButton android:id="@+id/btn123"
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/content_arow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        android:layout_alignRight="@+id/t1.1"/>

                           <TextView
                               android:id="@+id/l_doc_txt"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_alignParentTop="true"
                               android:layout_centerHorizontal="true"
                               android:gravity="center"
                               android:maxLines="2"
                               android:padding="5dp"
                               android:text="Doctors\nAvailable"
                               android:textColor="@color/Text_color"
                               android:textSize="14dp"
                               android:textStyle="bold" />

                           <TextView
                               android:id="@+id/Local_doc_avl_text"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_alignParentTop="true"
                               android:layout_toLeftOf="@+id/l_doc_txt"
                               android:gravity="center"
                               android:paddingLeft="5dp"
                               android:text="0"
                               android:textAppearance="?android:attr/textAppearanceMedium"
                               android:textColor="@color/white"
                               android:textSize="30dp"
                               android:textStyle="bold" />

                  </RelativeLayout>
                </LinearLayout>
                
                
                 <LinearLayout
           
        	android:id="@+id/Int_layout"
            android:layout_width="match_parent"
             android:layout_height="0dp"
          	android:orientation="horizontal"
            android:layout_marginTop="15dp"
             android:background="@drawable/whitebtn"
             android:layout_weight="0.80"
             android:padding="2dp"
             android:weightSum="1"
            
            
              
            
            >
                    
                     <RelativeLayout 
                         android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="0.50"
                          
                          
                          >
                          
                         <TextView
                android:id="@+id/Int_Credit_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:paddingLeft="10dp"
              android:textStyle="bold"
               
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="30dp" />
                         
                         <TextView
                             android:id="@+id/textView2"
                             android:layout_width="wrap_content"
                             android:layout_height="match_parent"
                             android:layout_toRightOf="@+id/Int_Credit_txt"
                             android:gravity="center"
                             android:maxLines="2"
                             android:padding="3dp"
                             android:text="INTERNATIONAL \nCREDIT"
                             android:textAppearance="?android:attr/textAppearanceMedium"
                             android:textColor="@color/white"
                             android:textSize="14dp"
                             android:textStyle="bold" />
                         
                  </RelativeLayout> 
                    
                      
                      
                      <RelativeLayout
                          
                           android:id="@+id/Int_doc_layout"
                           android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:layout_weight="0.50"
                          android:background="@color/red"
                          
                          >
                          
                           <ImageButton android:id="@+id/btn122"
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/content_arow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10dp"
                        />

                           <TextView
                               android:id="@+id/Int_doc_txt"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_alignParentTop="true"
                               android:layout_centerHorizontal="true"
                               android:gravity="center"
                               android:maxLines="2"
                               android:padding="5dp"
                               android:text="Doctors\nAvailable"
                               android:textColor="@color/Text_color"
                               android:textSize="14dp"
                               android:textStyle="bold" />

                           <TextView
                               android:id="@+id/Int_doc_avl_text"
                               android:layout_width="wrap_content"
                               android:layout_height="match_parent"
                               android:layout_alignParentTop="true"
                               android:layout_toLeftOf="@+id/Int_doc_txt"
                               android:gravity="center"
                               android:paddingLeft="5dp"
                               android:text="0"
                               android:textAppearance="?android:attr/textAppearanceMedium"
                               android:textColor="@color/white"
                               android:textSize="30sp"
                               android:textStyle="bold" />

                  </RelativeLayout>
                </LinearLayout>
                
                 
                  <LinearLayout
           
        	android:id="@+id/Shed_layout"
            android:layout_width="match_parent"
             android:layout_height="0dp"
          	android:orientation="horizontal"
            android:layout_marginTop="15dp"
             android:background="@drawable/whitebtn"
             android:layout_weight="0.80"
             
            
            
              
            
            >
                    
                     <RelativeLayout 
                         
                          android:layout_height="match_parent"
                         android:layout_width="match_parent"
                          
                          
                          >
                           
                         <TextView
                android:id="@+id/sched"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:paddingLeft="10dp"
              
               
                android:gravity="center"
                android:text="Schedule Appointment"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="19sp" />
                         
                          <ImageButton android:id="@+id/btn12"
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/content_arow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        />
                         
                           
                         </RelativeLayout>
                         
                     </LinearLayout>
                     
                  <LinearLayout
           
        	android:id="@+id/CallHis_layout"
            android:layout_width="match_parent"
             android:layout_height="0dp"
          	android:orientation="horizontal"
            android:layout_marginTop="15dp"
             android:background="@drawable/whitebtn"
             android:layout_weight="0.80"
             
            
            
              
            
            >
                    
                     <RelativeLayout 
                          android:layout_height="match_parent"
                         android:layout_width="match_parent"
                          
                          
                          >
                           
                         <TextView
                android:id="@+id/callHis"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
               android:paddingLeft="10dp"
              
               
                android:gravity="center"
                android:text="Call History"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="19sp" />
                         
                          <ImageButton android:id="@+id/btn158"
                        android:layout_width="8dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/content_arow"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="12dp"
                        />
                         
                           
                         </RelativeLayout>
                         
                     </LinearLayout>
                
                
                
                
                
                      </LinearLayout>
                      
            
            
           </ScrollView>    
               </RelativeLayout>
              
        
         </LinearLayout>

</RelativeLayout>