<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_background"
    android:padding="10dp"
    >
    <TextView 
        android:id="@+id/o_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/date_text"
      android:layout_marginTop="3dp"
       android:text="Date :- 4/5/2015 10:20:22 AM"
		android:gravity="center"       
		android:textSize="17dp"
		android:padding="5dp"
		android:textStyle="bold"
		 
      
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        >
        
        
        <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.70"
        >
    <TextView 
        android:id="@+id/oreder"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
      android:background="@drawable/whitebtn2"
      android:layout_marginTop="3dp"
       android:text="Order ID"
		android:gravity="center"       
		android:textSize="15dp"
		android:padding="5dp"
		
		 
      
        />
    <TextView 
        android:id="@+id/plan12"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
       android:background="@drawable/whitebtn2"
      android:layout_marginTop="3dp"
       android:text="Plan"
		android:gravity="center"       
		android:textSize="15dp"
		android:padding="5dp"
		 
      
        />
    <TextView 
        android:id="@+id/paid12"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
       android:background="@drawable/whitebtn2"
      android:layout_marginTop="3dp"
       android:text="You Paid"
		android:gravity="center"       
		android:textSize="15dp"
		android:padding="5dp"
		 
      
        />
    </LinearLayout>
    
        
         <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.30"
        >
    <TextView 
        android:id="@+id/o_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:background="@drawable/whitebtn2"
      android:layout_marginTop="3dp"
       android:text="45"
		       
		android:textSize="15dp"
		android:padding="5dp"
		
		 
      
        />
    <TextView 
        android:id="@+id/plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/whitebtn2"
      android:layout_marginTop="3dp"
       android:text="Monthly Membership"
		     
		android:textSize="15dp"
		android:padding="5dp"
		 
      
        />
    <TextView 
        android:id="@+id/paid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:background="@drawable/whitebtn2"
      android:layout_marginTop="3dp"
       android:text="$49.99"
	     
		android:textSize="15dp"
		android:padding="5dp"
		 
      
        />
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
