<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:background="@drawable/dashboardbg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="0.60"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/User_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/userprofimg" 
                android:padding="1dp"
                 android:background="@color/white"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/User_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/EditProfileImg_Btn"
                android:layout_alignParentLeft="true"
                android:maxLines="2"
                android:text="Pinal Kumar"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/EditProfileImg_Btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:background="#00B8FC"
                android:src="@drawable/editprof" />

        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="0.50"
      
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
               
                android:maxLines="2"
                android:text="LOCAL \nCREDIT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" 
                 android:layout_alignBottom="@+id/Local_Credit_txt"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/textView2"
                android:layout_toRightOf="@+id/Local_Credit_txt"
                />

            <TextView
                android:id="@+id/l_doc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               
                android:maxLines="2"
                android:text="Doctors\nAvailable"
                android:textSize="15dp"
                android:background="@drawable/availdocbg"
                android:gravity="center"
                android:textColor="@color/green"
                android:textAppearance="?android:attr/textAppearanceMedium"
                 android:layout_alignBottom="@+id/Local_doc_avl_text"
                android:layout_below="@+id/Local_Credit_txt"
                android:layout_toRightOf="@+id/Local_Credit_txt"
                 />

            <TextView
                android:id="@+id/Local_doc_avl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/Local_Credit_txt"
                android:layout_below="@+id/Local_Credit_txt"
                android:background="@drawable/availdocgreenbg"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/Local_Credit_txt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="30dp" />

        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
           	android:layout_weight="1"
            >

            <TextView
               android:id="@+id/Int_Credit_txt"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
               
                android:text="0"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="30dp" 
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/Int_Credit_txt"
                android:maxLines="2"
                android:text="INTERNATIONAL \nCREDIT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Int_doc_avl_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Int_Credit_txt"
                android:layout_toLeftOf="@+id/textView3"
                android:background="@drawable/availdocredbg"
                android:gravity="center"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/Int_doc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/Int_doc_avl_text"
                android:layout_toRightOf="@+id/Int_doc_avl_text"
                android:background="@drawable/availdocbg"
                android:gravity="center"
                android:maxLines="2"
                android:text="Doctors\nAvailable"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red"
                android:textSize="15dp" />
            
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1.8"
        
        >
    </LinearLayout>

</LinearLayout>