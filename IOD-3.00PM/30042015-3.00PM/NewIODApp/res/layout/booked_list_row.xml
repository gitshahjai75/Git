<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:background="#00BFFF"
     android:paddingTop="15dp"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
     android:paddingBottom="15dp">
    
    
    <!-- Thumbnail Image -->
    <TextView 
        android:id="@+id/date_order2"
        android:layout_width="70dp"
        android:layout_height="70dp"
       android:background="@drawable/whitebtn"
       android:padding="1dp"
       android:text="28 mar"
		android:gravity="center"       
		android:textSize="25dp"
		 android:scaleType="fitXY"
       android:textColor="@color/Text_color"
        android:layout_marginRight="5dp" />

    <!-- Movie order_no -->
    <TextView
        android:id="@+id/From_order2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/date_order2"
        android:layout_toRightOf="@+id/date_order2"
        android:textColor="#FFFFFF"
        android:text="Time"
        android:paddingLeft="10dp"
	
        android:textSize="19sp"
        
        android:textStyle="bold" />

    <!-- Rating  available and busy-->
    
    <TextView
        android:id="@+id/To_order2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/From_order2"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/date_order2"
        android:paddingLeft="10dp"
        android:text="To : 12.50 PM"
        android:textColor="#FFFFFF"
        android:textSize="19sp"
        android:textStyle="bold" />
  
    <TextView
        android:id="@+id/book2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/To_order2"
        android:layout_centerVertical="true"
        android:text="Cancel"
		android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
       
        />
    
   
      
</RelativeLayout>