<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:background="#00BFFF"
     android:paddingTop="15dp"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
     android:paddingBottom="15dp">
    
    
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
       	android:background="@drawable/fram_green"
       	android:padding="3dp"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        
        android:layout_marginRight="5dp" />

    <!-- Movie Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#FFFFFF"
        
        android:paddingLeft="10dp"
	
        android:textSize="19dp"
        android:text="sagar"
        android:textStyle="bold" />
 
    <!-- Rating  available and busy-->
    
    <TextView
        android:id="@+id/sp1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sp1"
       
        android:layout_below="@id/title"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="2dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:paddingLeft="10dp"
        android:text="ffgh"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
         	   			          
        	 <TableRow 
        	     android:layout_below="@+id/sp1"
        	     android:layout_width="wrap_content"
        	     android:layout_height="wrap_content"
        	     android:layout_marginTop="2dp"
        	     android:layout_toRightOf="@+id/thumbnail" android:id="@+id/tableRow1">
                
              <LinearLayout 
         android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#00BFFF"
    android:layout_gravity="bottom"
    android:paddingLeft="10dp"
    android:orientation="horizontal" >

                  <RatingBar
        android:id="@+id/Dr_rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:clickable="false"     
android:focusableInTouchMode="false"    
android:focusable="false"
       android:isIndicator="true"
        android:layout_centerHorizontal="true"
          style="@android:style/Widget.Holo.RatingBar.Small"
        />
   
    
   </LinearLayout>
   
            </TableRow>
    
    
    
    <!-- Genre -->
    <TextView
        android:id="@+id/genre"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/thumbnail"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:textSize="@dimen/genre" />

    <!-- Release Year -->
    <TextView
        android:id="@+id/releaseYear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:textSize="@dimen/year" />

    <Button
        android:id="@+id/btncall13"
        android:layout_width="8dp"
        android:layout_height="15dp"
        android:layout_alignRight="@+id/sp1"
        android:layout_centerVertical="true"
        android:background="@drawable/content_arow"
        android:focusable="false" 
       
        />
    
     <Button
        android:id="@+id/btncall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:clickable="true"
      	 android:layout_alignRight="@+id/sp1"
        android:layout_centerVertical="true"
        android:focusable="false" 
        android:background="@drawable/calliconwhite"
         android:visibility="gone"
        />

     <TextView
         android:id="@+id/rating"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/thumbnail"
         android:layout_alignLeft="@+id/tableRow1"
         android:paddingLeft="10dp"
         android:text="TextView"
         android:textColor="#FFFFFF"
         android:textSize="15dp" />
      
</RelativeLayout>