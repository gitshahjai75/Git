<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:card_view="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#80ffffff"
tools:context="arihantmart.techno.arihantmart.HowtouseFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=" How to buy? "
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="#cccccc"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="Hello,Customer\nDont worry its too easy.\n\nStep -1)Choose your items and add to cart all.\n\nStep -2)Prees check out and overview your item list and details\n\nStep -3)Set delivery address.\n\nStep -4)Select payment method.\n\nStep -5)Wait till Thank You Message On Screen.\nThat's It.\n\n\n!!!Yeaheee You Done.\nVery Easy No???."
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left"
                android:textSize="15dp"
                android:textColor="#000000"
                android:padding="10dp"
                android:layout_below="@+id/textView"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:drawableLeft="@android:drawable/ic_menu_help"
        android:text="Still Confused???\nContact us below."
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="left|center"
        android:textSize="15dp"
        android:textColor="#000000"
        android:layout_below="@+id/textView"/>

    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_call_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:drawableLeft="@android:drawable/ic_menu_call"
                android:text="  +91-8155993555"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="3dp"
        card_view:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_email_contactus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:drawableLeft="@android:drawable/ic_menu_edit"
                android:text="  info@arihantmart.com"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_below="@+id/textView"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>


</ScrollView>