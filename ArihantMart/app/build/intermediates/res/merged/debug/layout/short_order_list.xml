<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        card_view:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:fitsSystemWindows="true">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#20212121"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:text="Order No:"
                    android:paddingLeft="15dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_no"
                    android:textSize="15dp"
                    android:text="12345689436216541"
                    android:paddingLeft="17dp"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:orientation="horizontal"
                android:background="#20212121"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="Order Date: "
                    android:paddingLeft="15dp"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_order_date"
                    android:textSize="11dp"
                    android:text="12345689436216541"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"/>

            </LinearLayout>




                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_useremailorder"
                    android:textSize="17dp"
                    android:text="useremail"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="7dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#000000"/>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="#cccccc"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Remain Return Time (For Whole Order)"
                android:paddingLeft="15dp"
                android:gravity="center"
                android:paddingTop="2dp"
                android:textColor="#000000"/>


            <LinearLayout
                android:layout_marginTop="7dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">



                    <TextView
                        android:id="@+id/tv_timer_return"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:layout_height="wrap_content"
                        android:textSize="21dp"
                        android:text=""
                        android:paddingLeft="21dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="7dp"
                        android:textColor="#000000"/>








                <TextView
                    android:id="@+id/btn_returnorder_wholeorder"
                    android:padding="1dp"
                    android:text="Cancel  "
                    android:textSize="19dp"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:gravity="center"
                    android:background="@color/colorAccent"
                    android:textColor="#ffffff"
                    android:drawableLeft="@android:drawable/ic_menu_close_clear_cancel"/>


            </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>