<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arihantmart.techno.arihantmart.Signup"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">



        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/secure_payment"/>

        <TextView
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal"
            android:text="Select payment method"
            android:textColor="#000"
            android:textSize="29sp" />


        <RadioGroup
            android:id="@+id/radioChoice"
            android:padding="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/rb_cash_on_delivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cash on Delivery"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_credit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/rb_debit_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debit Card"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/rb_paytm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paytm Wallet"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/rb_net_banking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Net Banking"
                android:layout_marginTop="10dp" />

            <RadioButton
                android:id="@+id/rb_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other Wallet"
                android:layout_marginTop="10dp" />

        </RadioGroup>


        <Button
            android:id="@+id/btn_paynow"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay  Now."
            android:textAllCaps="false"
            android:textSize="23dp"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_oval_primerycolor"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
