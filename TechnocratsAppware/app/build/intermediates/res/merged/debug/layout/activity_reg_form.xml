<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>


    <TextView
        android:id="@+id/textView1"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="-:Registration Form:-"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/rounded_border_white_only"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            
            
            
            
       <TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter Name:"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<EditText
        android:id="@+id/et_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:focusable="true"
        android:focusableInTouchMode="true"
       android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Enter Full Name "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textPersonName" >

       
    </EditText>
<TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter Mobile No:"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<EditText
        android:id="@+id/et_mo_no"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Enter your Mobile No "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="number" >

    </EditText>
<TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Course:"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<Spinner
        android:id="@+id/sp_course"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:entries="@array/formtype"
        android:background="@drawable/rounded_border_white_only" />
<TextView
    android:id="@+id/sp_grp_title"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Your Group Size"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<Spinner
        android:id="@+id/sp_groupno"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:entries="@array/student_no"
        android:background="@drawable/rounded_border_white_only" />
<TextView
        android:id="@+id/tv_fee"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="fee:Rs.15000/student"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<EditText
        android:id="@+id/et_stu_two"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Enter Second partner Name "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textPersonName" >

    
    </EditText>
<EditText
        android:id="@+id/et_stu_three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:hint="Enter Third partner Name "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textPersonName" >

    </EditText>
<EditText
        android:id="@+id/et_stu_four"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:layout_marginTop="3dp"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:hint="Enter Four partner Name  "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textPersonName" >

         
    </EditText>
<TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter email Address:"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<EditText
        android:id="@+id/et_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:hint="Enter your e-mail Add: "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textEmailAddress" >

         
    </EditText>
<TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter Address:"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<EditText
        android:id="@+id/et_add"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:layout_marginRight="5dp"
        android:hint="Enter your Res.Add: "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textPostalAddress" >

         
    </EditText>     
    

<TextView
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Enter College Name:"
        android:textColor="#000000"
     
        android:textAppearance="?android:attr/textAppearanceLarge" />
<EditText
        android:id="@+id/et_college"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        
        android:hint="Enter your College Name: "
        android:textColorHint="@color/counter_text_bg"
        android:background="@drawable/rounded_border_white_only"
        android:inputType="textMultiLine" >

         
    </EditText>


 <CheckBox
        android:id="@+id/cb_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:text="I Accept all Terms &amp; Conditions."
        android:textColor="#000000"
        android:checked="false" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:enabled="false"
                android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="  SAVE/PREVIEW  " />




            
            
            
            
        </LinearLayout>
    </ScrollView>

   

</LinearLayout><!-- From: file:/E:/workspace_AndroidStudio/TechnocratsAppware/app/src/main/res/layout/activity_reg_form.xml -->