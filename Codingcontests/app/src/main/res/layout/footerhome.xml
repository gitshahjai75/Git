<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PastWeek"
            android:gravity="center"
            android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_media_previous"
            android:id="@+id/btn_pastweek"
            android:textSize="15dp"
            android:layout_margin="1dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_oval_primerycolor" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="LiveWeek"
            android:gravity="center"
            android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_media_play"
            android:id="@+id/btn_currentweek"
            android:textSize="15dp"
            android:layout_margin="1dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_oval_primerycolor" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="NextWeek"
            android:gravity="center"
            android:padding="5dp"
            android:drawableRight="@android:drawable/ic_media_next"
            android:id="@+id/btn_nextweek"
            android:textSize="15dp"
            android:layout_margin="1dp"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:background="@drawable/rounded_oval_primerycolor" />



            </LinearLayout>

</LinearLayout>