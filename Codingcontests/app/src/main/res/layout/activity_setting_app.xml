<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="5dp">


        <TextView
            android:id="@+id/login_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:text="Remind before"
            android:textColor="#fff"
            android:textSize="23sp"
            android:background="@color/colorPrimary"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_popup_reminder"/>


        <RadioGroup
            android:id="@+id/radioChoice"
            android:padding="20dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/rb_15min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 min"
                 />

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/rb_30min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 min"
                 />

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/rb_45min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="45 min"
                 />

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/rb_60min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60 min" />

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/rb_90min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90 min (1 hr:30 min)"
                 />

            <RadioButton
                android:layout_margin="10dp"
                android:id="@+id/rb_120min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120 min (2 hr)"
                 />

        </RadioGroup>



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#cccccc"/>

        <TextView
            android:id="@+id/tv_my_reminders"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:text="Show My Reminders"
            android:textColor="#fff"
            android:textSize="23sp"
            android:background="@color/colorPrimary"
            android:drawableRight="@android:drawable/ic_media_play"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:drawableLeft="@android:drawable/ic_menu_view"/>



        <!-- <Button
             android:id="@+id/btn_paynow"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Pay  Now."
             android:textAllCaps="false"
             android:textSize="23dp"
             android:textColor="#ffffff"
             android:background="@drawable/rounded_oval_primerycolor"
             android:layout_gravity="center_horizontal" />-->

    </LinearLayout>

</ScrollView>
