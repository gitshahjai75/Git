<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popup_fb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#5521AE">

        <com.emoji.me_emoji.uc.UserTextView
            android:text="LogIn With FB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:tag="100"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:id="@+id/textView6" />

    </LinearLayout>

    <com.emoji.me_emoji.uc.UserTextView
        android:text="Me Emoji app require your Email and Mobile Number For Facebook Login"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:tag="200"
        android:textStyle="italic"
        android:layout_marginTop="20dp"
        android:textSize="18dp"
        android:id="@+id/textView9" />

    <com.emoji.me_emoji.uc.UserEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Email"
        android:tag="200"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:background="#A14A86"
        android:ems="10"
        android:id="@+id/email" />

    <com.emoji.me_emoji.uc.UserEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Mobile"
        android:tag="200"
        android:textColor="@android:color/white"
        android:padding="15dp"
        android:gravity="center_horizontal"
        android:background="#A14A86"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:id="@+id/mobile" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <com.emoji.me_emoji.uc.UserTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn"
            android:text="SUBMIT"
            android:tag="100"
            android:padding="15dp"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_weight="1"></com.emoji.me_emoji.uc.UserTextView>


        <com.emoji.me_emoji.uc.UserTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_fb_cancel"
            android:text="CANCEL"
            android:padding="15dp"
            android:tag="100"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:layout_weight="1"></com.emoji.me_emoji.uc.UserTextView>

    </LinearLayout>


</LinearLayout>