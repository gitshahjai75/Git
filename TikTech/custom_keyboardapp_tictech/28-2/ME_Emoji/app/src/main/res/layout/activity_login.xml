<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.emoji.me_emoji.LoginActivity">



    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/top_img"
        android:layout_marginTop="40dp"
        android:id="@+id/imageView" />

    <com.emoji.me_emoji.uc.UserTextView
        android:text="LOG IN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:tag="100"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="15dp"
        android:background="#A6B059CA">

        <com.emoji.me_emoji.uc.UserEditText
            android:hint="Email"
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="200"
            android:text="test@gmail.com"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:background="@null"
            android:id="@+id/username" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="#A6B059CA"
        android:layout_marginTop="2dp">

        <com.emoji.me_emoji.uc.UserEditText
            android:hint="Password"
            android:textColorHint="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="200"
            android:inputType="textPassword"
            android:text="test"
            android:textColor="@android:color/white"
            android:gravity="center_horizontal"
            android:background="@null"
            android:id="@+id/password" />

    </LinearLayout>

    <com.emoji.me_emoji.uc.UserTextView
        android:text="Forgot Password?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#C981A7"
        android:tag="100"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:id="@+id/txt_forgotpass" />

    <LinearLayout
        android:id="@+id/login"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:padding="12dp"
        android:background="@drawable/login_btn">


        <com.emoji.me_emoji.uc.UserTextView
            android:text="LOG IN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#BD5586"
            android:tag="100"
            android:textSize="25dp"
            android:textStyle="bold" />

    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp">


        <com.emoji.me_emoji.uc.UserTextView
            android:text="Don't have an account? Sign up!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:textColor="@android:color/white"
            android:textSize="16dp"
            android:tag="100"
            android:layout_marginBottom="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/txt_signup" />

        <LinearLayout
            android:id="@+id/linear_loginwith_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#476AC8"
            android:padding="12dp"
            android:gravity="center_horizontal"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@drawable/fb"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:id="@+id/imageView2" />

            <com.emoji.me_emoji.uc.UserTextView
                android:text="LogIn with facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:id="@+id/textView7"
                android:tag="100"
                android:textSize="20dp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="10dp"
                 />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

</ScrollView>
