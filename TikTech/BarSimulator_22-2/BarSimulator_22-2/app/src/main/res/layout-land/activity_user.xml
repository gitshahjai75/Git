<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/app_bg">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#A6000000"
    android:layout_height="80dp">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="20dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/nameicon"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <com.barapp.simulator.uc.UserTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="100"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/txt_twentytwo"
            android:textColor="@android:color/white"
            android:text="Name Of User"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/coin_gray"/>

            <com.barapp.simulator.uc.UserTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="100"
                android:textColor="#ff0000"
                android:textSize="@dimen/txt_eighteen"
                android:layout_marginLeft="5dp"
                android:text="200"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:text=""
        android:ems="11"
        android:imeOptions="flagNoExtractUi"
        android:background="@drawable/rounded_grey"
        android:drawableLeft="@drawable/search"
        android:drawableRight="@drawable/filter"
        android:padding="8dp"
        android:hint="Search"
        android:layout_marginRight="20dp"
        android:id="@+id/et_search" />

    <LinearLayout
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:background="@drawable/bullet_diseble">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/wine_red_icon"/>

    </LinearLayout>

</LinearLayout>


<LinearLayout
    android:id="@+id/dropdown"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:gravity="center"
    android:layout_marginRight="19dp"
    android:orientation="vertical"
    android:padding="5dp"
    android:visibility="visible"
    android:background="@drawable/rounded_dropdown"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="80dp"
    android:layout_marginEnd="19dp">

    <LinearLayout
        android:id="@+id/shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circular_bg_wallet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Shop" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:id="@+id/mytest"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circular_bg_wallet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="My Test"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="8dp"
        android:id="@+id/purchase"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/circular_bg_wallet"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Purchase My Coins"/>

    </LinearLayout>
</LinearLayout>

</RelativeLayout>